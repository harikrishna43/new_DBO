@model IEnumerable<DBO.Data.Models.CompanySkill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<h2>@ResourceString.Instance.Index</h2>

<p>
    @Html.ActionLink((string)ResourceString.Instance.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @ResourceString.Instance.Company
        </th>
        <th>
            @ResourceString.Instance.Skill
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skill.Name)
            </td>
            <td>
                @Html.ActionLink((string)ResourceString.Instance.Edit, "Edit", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink((string)ResourceString.Instance.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
