@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<section class="section-cards pt-3">
    <div class="container-fluid" style="margin:0;padding:0;">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-area">
                    @using (Html.BeginForm("Create","Translations"))
                    {
                        <br style="clear:both">
                        <h3 style="margin-bottom: 25px; text-align: center;">Create new resource</h3>
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="Name" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="english" name="EngValue" placeholder="English" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="danish" name="DaValue" placeholder="Danish" required>
                        </div>

                        <button type="submit" class="btn btn-success pull-right">Create</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

