@model IEnumerable<DBO.Data.Models.Company>

@foreach (var item in Model)
{
    <tr id="tr_@item.Id">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanySkills.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink((string)ResourceString.Instance.Edit, "Edit", "Companies", new { id = item.Id }, new { id = item.Id })
            <a href="#" onclick="openModal(@item.Id)">@ResourceString.Instance.Delete</a>
        </td>
    </tr>
}